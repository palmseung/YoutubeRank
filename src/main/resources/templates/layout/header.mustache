<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <h3 class="masthead-heading">Enter a keyword for YouTube</h3>
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <br/>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <form>
                <div class="form-row">
                    <div class="col-12 col-md-9 mb-2 mb-md-0">
                        <input type="text" id="search" class="form-control form-control-lg" placeholder="">
                    </div>

                    <div class="col-12 col-md-3">
                        <button type="submit" id="searchBtn" class="btn btn-block btn-lg btn-primary">
                            <a data-toggle="modal" data-target="#search-result-modal">Search</a></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</header>