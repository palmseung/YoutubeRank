<section class="page-section portfolio" id="portfolio">
    <div class="container">
        {{^loginUser}}
            <div class="text-center">
                <h2 class="page-section-heading text-secondary mb-0 d-inline-block">Recommended Keywords</h2>
            </div>

            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal0">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center ">
                            <h2 class="portfolio-modal-title">Queendom</h2>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal0">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center ">
                            <h2 class="portfolio-modal-title">(G)I-dle</h2>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal0">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center ">
                            <h2 class="portfolio-modal-title">로드투킹덤</h2>
                        </div>
                    </div>
                </div>
            </div>
        {{/loginUser}}

        {{#loginUser}}
            <div class="text-center">
                <h2 class="page-section-heading text-secondary mb-0 d-inline-block">My Keywords</h2>
            </div>

            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
        {{/loginUser}}

        <div class="row justify-content-center">
            {{#keywords}}
                <div class="col-md-6 col-lg-4 mb-5" id="keywordBox" onclick="javascript:searchKeyword('{{keyword}}');">
                    <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal0">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center ">
                            <h2 class="portfolio-modal-title" data-toggle="modal" data-target="#search-result-modal">
                                {{keyword}}
                            </h2>
                        </div>
                    </div>
                </div>
            {{/keywords}}
        </div>
    </div>
</section>