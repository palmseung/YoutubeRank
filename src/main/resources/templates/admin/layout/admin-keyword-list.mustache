<div class="card text-center">
    <section class="page-section" id="member-list">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/member">Members</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/admin/keyword">Keywords</a>
                </li>
            </ul>
        </div>
        <br/>
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Keyword List</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="divider-custom">
                {{#keywordCount}}
                    <div>
                        총 등록된 키워드 개수 : {{keywordCount}}개
                    </div>
                {{/keywordCount}}
            </div>
            <br/>
            <div class="d-flex justify-content-center">
                <ul class="d-flex list-group col-md-8 justify-content-center center">
                    {{#allKeywords}}
                        <div class="center justify-content-center">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="text-left">
                                    <div>id  : {{id}}</div>
                                    <div>keyword    : {{keyword}}</div>
                                </div>
                            </li>
                        </div>
                    {{/allKeywords}}
                </ul>
            </div>
        </div>
    </section>
</div>
