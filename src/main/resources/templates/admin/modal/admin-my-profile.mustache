{{#loginUser}}
    <div class="portfolio-modal modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="#portfolioModal0Label" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fas fa-times"></i></span></button>
                <div class="modal-body text-center">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 mb-5 mb-lg-0">
                                <img class="img-fluid rounded mb-5" src="../img/avataaars.svg"/>

                            </div>
                            <div class="col-lg-8">
                                <h2 class="portfolio-modal-title text-secondary mb-0">My Profile</h2>
                                <div class="divider-custom">
                                    <div class="divider-custom-line"></div>
                                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                    <div class="divider-custom-line"></div>
                                </div>
                                <p class="mb-1">{{name}}</p>
                                <p class="mb-1">{{email}}</p>
                                <br/>
                                <br/>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#editPasswordModal"><i class="fas fa-pencil-alt"></i> Edit password</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/loginUser}}